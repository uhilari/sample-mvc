@model IEnumerable<MvcSample.Models.DetalleItem>
@{
    ViewBag.Title = "Home Page";
}

<h2>List Sample</h2>

<table class="table">
    <thead>
    <tr>
        <th>Codigo</th>
        <th>Descripcion</th>
    </tr>
    </thead>
    <tbody>
@foreach (var itm in Model)
{
    if (itm.Tipo == 1)
    {
        <tr>
            <td colspan="2"><b>@itm.Descripcion</b></td>
        </tr>
    }
    else if (itm.Tipo == 2)
    {
        <tr>
            <td>@itm.Codigo</td>
            <td>@itm.Descripcion</td>
        </tr>
    }
}
    </tbody>
</table>